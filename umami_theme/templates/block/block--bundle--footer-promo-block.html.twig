{#
/**
 * @file
 * Theme override for a footer promo block.
 *
 * Mirrors classic Umami markup so baseline CSS hooks apply consistently.
 */
#}
{% set attributes = attributes.addClass('block-type-footer-promo-block', 'footer-block') %}

<div{{ attributes }} data-component-id="umami:footer-block">
  <div class="footer-block__wrapper">
    {{ content.field_media_image }}
    <div class="footer-block__content">
      {{ title_prefix }}
      {% if label %}
        <h2 data-component-id="umami:title" class="block__title footer-block__title umami-title">{{ label }}</h2>
      {% elseif content.field_title %}
        <h2 data-component-id="umami:title" class="block__title footer-block__title umami-title">{{ content.field_title }}</h2>
      {% endif %}
      {{ title_suffix }}
      {% if label %}
        {{ content|without('field_media_image') }}
      {% else %}
        {{ content|without('field_title')|without('field_media_image') }}
      {% endif %}
    </div>
  </div>
</div>
