{#
/**
 * @file
 * Theme override for the search form block.
 *
 * Match core Umami markup so the mobile search icon + desktop form styling can
 * be reused without custom JS.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 * - content: The content of this block.
 * - attributes: HTML attributes for the containing element.
 * - title_attributes: HTML attributes for the title element.
 * - title_prefix: Additional output populated by modules.
 * - title_suffix: Additional output populated by modules.
 */
#}
{%
  set classes = [
    'block',
    'block-search',
    'container-inline',
  ]
%}

<div class="search-iconwrap">
  <a class="search-link" title="{{ 'Go to the search page'|t }}" href="{{ path('search.view') }}">
    <span class="search-icon" aria-hidden="true">{% include active_theme_path() ~ '/images/svg/search.svg' %}</span>
    <span class="visually-hidden">{{ 'Search'|t }}</span>
  </a>
</div>

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes.addClass('visually-hidden') }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ content }}
  {% endblock %}
</div>

