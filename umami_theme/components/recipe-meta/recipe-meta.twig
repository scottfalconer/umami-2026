{#
/**
 * @file
 * Render recipe meta fields.
 */
#}

{% set difficulty_label_map = {
  easy: 'Easy'|t,
  medium: 'Medium'|t,
  hard: 'Hard'|t
} %}

{% set classes = classes|default([])|merge([
  'recipe-meta',
  'flex',
  'flex-wrap',
  'gap-6',
  'border-t',
  'border-b',
  'border-border',
  'py-4'
])|filter(v => v is not empty) %}

<dl class="{{ classes|join(' ') }}">
  {% if preparation_time is not empty %}
    <div class="flex flex-col gap-1">
      <dt class="text-xs font-semibold text-muted-foreground">{{ 'Prep'|t }}</dt>
      <dd class="font-semibold">{{ preparation_time }} {{ 'minutes'|t }}</dd>
    </div>
  {% endif %}

  {% if cooking_time is not empty %}
    <div class="flex flex-col gap-1">
      <dt class="text-xs font-semibold text-muted-foreground">{{ 'Cook'|t }}</dt>
      <dd class="font-semibold">{{ cooking_time }} {{ 'minutes'|t }}</dd>
    </div>
  {% endif %}

  {% if number_of_servings is not empty %}
    <div class="flex flex-col gap-1">
      <dt class="text-xs font-semibold text-muted-foreground">{{ 'Serves'|t }}</dt>
      <dd class="font-semibold">{{ number_of_servings }}</dd>
    </div>
  {% endif %}

  {% if difficulty is not empty %}
    {% set difficulty_label = difficulty_label_map[difficulty]|default(difficulty) %}
    <div class="flex flex-col gap-1">
      <dt class="text-xs font-semibold text-muted-foreground">{{ 'Difficulty'|t }}</dt>
      <dd class="font-semibold">{{ difficulty_label }}</dd>
    </div>
  {% endif %}
</dl>
